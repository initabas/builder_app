<!DOCTYPE html>
<html>
<head>
  <title>Worker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="nav-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
           
     <div class="container">
     	<div class="nav-logo-triangle"></div>
     		<div class="brand" >	
        <a href="/"> <%=image_tag("logo.png") %></a>
     		</div>
     </div>

      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
          <li class="<%= ('active' if current_page?(jobs_path)) %>"><%= link_to '<i class="glyphicon glyphicon-list-alt"></i> Найти Работу'.html_safe, jobs_path %></li>
          <li class="<%= ('active' if current_page?(accepted_jobs_path)) %>"><%= link_to '<i class="glyphicon glyphicon-ok"></i> Выполненые Работы'.html_safe, accepted_jobs_path %></li>
          <li class="<%= ('active' if current_page?(users_path)) %>"><%= link_to '<i class="glyphicon glyphicon-search"></i> Найти Рабочего'.html_safe, users_path %></li>
          <li class="<%= ('active' if current_page?(new_job_path)) %>"><%= link_to '<i class="glyphicon glyphicon-pencil"></i> Заказать Работу'.html_safe, new_job_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          	<li id="notification"><%= link_to display_notification, activities_path, :class => "glyphicon glyphicon-envelope" %></li>
	          <li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog cog-padding"></span> <b class="caret"></b></a>
		          <ul class="dropdown-menu">
		          	<li><%= link_to "Мои Заказы", user_jobs_path(:user_id => current_user.id) %></li>
		          	<li><%= link_to "Мои Работы", hired_jobs_path(:user_id => current_user.id) %></li>
								<li><%= link_to current_user.name, current_user %></li>
		            <li class="divider"></li>
		            <li><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></li>
		          </ul>
		        </li>
          <% elsif %>
          	<li><%= link_to 'Новый рабочий', worker_sign_up_path %></li>
          	<li><%= link_to 'Войти', new_user_session_path %></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>